<section class="py-8 antialiased bg-gray-900 md:py-16">
  <form action="/order/checkout" method="POST" class="mx-auto max-w-screen-xl px-4 2xl:px-0">
    <div class="lg:flex lg:gap-16">
      
      <!-- Left: Delivery Details and Payment Method -->
      <div class="lg:w-1/2">
        <h2 class="text-xl font-semibold text-white sm:text-2xl">Delivery Details</h2>
        
        <div class="space-y-4 mt-6">
          <!-- Delivery Details Form -->
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
              <label for="your_name" class="mb-2 block text-sm font-medium text-white">Your name</label>
              <input type="text" id="your_name" name="name" class="block w-full rounded-lg border p-2.5 text-sm focus:border-primary-500 focus:ring-primary-500 border-gray-600 bg-gray-700 text-white placeholder:text-gray-400" placeholder="Bonnie Green" required />
            </div>

            <div>
              <label for="your_email" class="mb-2 block text-sm font-medium text-white">Your email*</label>
              <input type="email" id="your_email" name="email" class="block w-full rounded-lg border p-2.5 text-sm focus:border-primary-500 focus:ring-primary-500 border-gray-600 bg-gray-700 text-white placeholder:text-gray-400" placeholder="name@flowbite.com" required />
            </div>

            <div>
              <label for="select-province-input-3" class="mb-2 block text-sm font-medium text-white">Province*</label>
              <select id="select-province-input-3" name="province" class="block w-full rounded-lg border p-2.5 text-sm focus:border-primary-500 focus:ring-primary-500 border-gray-600 bg-gray-700 text-white placeholder:text-gray-400">
                <!-- <option selected>TPHCM</option>
                <option value="AU">Australia</option>
                <option value="FR">France</option>
                <option value="ES">Spain</option>
                <option value="UK">United Kingdom</option> -->
              </select>
            </div>

            <div>
              <label for="select-district-input-3" class="mb-2 block text-sm font-medium text-white">District*</label>
              <select id="select-district-input-3" name="district" class="block w-full rounded-lg border p-2.5 text-sm focus:border-primary-500 focus:ring-primary-500 border-gray-600 bg-gray-700 text-white placeholder:text-gray-400">
                <!-- <option selected>Quan 1</option>
                <option value="NY">New York</option>
                <option value="LA">Los Angeles</option>
                <option value="CH">Chicago</option>
                <option value="HU">Houston</option> -->
              </select>
            </div>

            <div>
              <label for="select-commune-input-3" class="mb-2 block text-sm font-medium text-white">Commune*</label>
              <select id="select-commune-input-3" name="commune" class="block w-full rounded-lg border p-2.5 text-sm focus:border-primary-500 focus:ring-primary-500 border-gray-600 bg-gray-700 text-white placeholder:text-gray-400">
                <!-- <option selected>Tam Phuoc</option>
                <option value="NY">Phuoc Tan</option>
                <option value="LA">Los Angeles</option>
                <option value="CH">Chicago</option>
                <option value="HU">Houston</option> -->
              </select>
            </div>

            <div>
              <label for="street-input" class="mb-2 block text-sm font-medium text-white">Street</label>
              <input type="text" id="street" name="street" class="block w-full rounded-lg border p-2.5 text-sm focus:border-primary-500 focus:ring-primary-500 border-gray-600 bg-gray-700 text-white placeholder:text-gray-400" placeholder="Vo Thi Sau Street/51A" required />
            </div>

            <div>
              <label for="phone-input-3" class="mb-2 block text-sm font-medium text-white">Phone Number*</label>
              <input type="text" id="phone-input-3" name="phone" class="block w-full rounded-lg border p-2.5 text-sm focus:border-primary-500 focus:ring-primary-500 border-gray-600 bg-gray-700 text-white placeholder:text-gray-400" placeholder="123-456-7890" required />
            </div>
          </div>
        </div>

        <div class="space-y-4 mt-8">
          <h3 class="block text-sm font-medium text-white">Delivery Method</h3>
          <div class="space-y-4">
            <div class="rounded-lg border p-4 ps-4 border-gray-700 bg-gray-800">
              <div class="flex items-start">
                <div class="flex h-5 items-center">
                  <input id="dhl" aria-describedby="dhl-text" type="radio" name="deliveryMethod" value="DHL Fast Delivery" class="h-4 w-4 text-primary-600 focus:ring-2 focus:ring-primary-600 border-gray-600 bg-gray-700 ring-offset-gray-800" checked />
                </div>
                <div class="ms-4 text-sm">
                  <label for="dhl" class="font-medium leading-none text-white">DHL Fast Delivery</label>
                  <p id="dhl-text" class="mt-1 text-xs font-normal text-gray-400">Next day delivery - $15</p>
                </div>
              </div>
            </div>

            <div class="rounded-lg border p-4 ps-4 border-gray-700 bg-gray-800">
              <div class="flex items-start">
                <div class="flex h-5 items-center">
                  <input id="fedex" aria-describedby="fedex-text" type="radio" name="deliveryMethod" value="FedEx Free Deliver" class="h-4 w-4 text-primary-600 focus:ring-2 border-gray-600 bg-gray-700 ring-offset-gray-800 focus:ring-primary-600" />
                </div>
                <div class="ms-4 text-sm">
                  <label for="fedex" class="font-medium leading-none text-white">FedEx Free Delivery</label>
                  <p id="fedex-text" class="mt-1 text-xs font-normal text-gray-400">Delivery in a few days</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment Method -->
        <div class="space-y-4 mt-8">
          <h3 class="block text-sm font-medium text-white">Payment Method</h3>
          <div class="rounded-lg border p-4 ps-4 border-gray-700 bg-gray-800">
            <div class="flex items-start">
              <div class="flex h-5 items-center">
                <input id="credit-card" aria-describedby="credit-card-text" type="radio" name="paymentMethod" value="Credit card" class="h-4 w-4 text-primary-600 focus:ring-2  border-gray-600 bg-gray-700 ring-offset-gray-800 focus:ring-primary-600" checked />
              </div>
              <div class="ms-4 text-sm">
                <label for="credit-card" class="font-medium leading-none text-white">Credit Card</label>
                <p id="credit-card-text" class="mt-1 text-xs font-normal text-gray-400">Pay with your credit card</p>
              </div>
            </div>
          </div>

          <div class="rounded-lg border p-4 ps-4 border-gray-700 bg-gray-800">
            <div class="flex items-start">
              <div class="flex h-5 items-center">
                <input id="paypal" aria-describedby="paypal-text" type="radio" name="paymentMethod" value="PayPal" class="h-4 w-4 text-primary-600 focus:ring-2 border-gray-600 bg-gray-700 ring-offset-gray-800 focus:ring-primary-600" />
              </div>
              <div class="ms-4 text-sm">
                <label for="paypal" class="font-medium leading-none text-white">PayPal</label>
                <p id="paypal-text" class="mt-1 text-xs font-normal text-gray-400">Pay using PayPal</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right: Order Summary -->
      <div class="lg:w-1/2 mt-8 lg:mt-0">
        <h2 class="text-xl font-semibold text-white sm:text-2xl">Order Summary</h2>

        <div class="mt-6 sm:mt-8">
          <div class="relative overflow-x-auto border-b border-gray-800">
            <table class="w-full text-left font-medium text-white md:table-fixed">
              <tbody class="divide-y divide-gray-800">
                <% cart.products.forEach(item => { %>
                <tr>
                  <td class="whitespace-nowrap py-4 md:w-[384px]">
                    <div class="flex items-center gap-4">
                      <!-- <a href="#" class="flex items-center aspect-square w-10 h-10 shrink-0">
                        <img class="h-auto w-full max-h-full dark:hidden" src="<%= item.productId.imageUrl %>" alt="<%= item.productId.name %>" />
                        <img class="hidden h-auto w-full max-h-full dark:block" src="<%= item.productId.imageUrlDark %>" alt="<%= item.productId.name %>" />
                      </a> -->
                      <a href="#" class="hover:underline"><%= item.productId.name %></a>
                    </div>
                  </td>

                  <td class="p-4 text-base font-normal text-white">x<%= item.quantity %></td>

                  <td class="p-4 text-right text-base font-bold text-white">$<%= (item.productId.price * item.quantity).toFixed(2) %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <div class="mt-4 space-y-6">
            <div class="space-y-4">
              <div class="space-y-2">
                <dl class="flex items-center justify-between gap-4">
                  <dt class="text-gray-400">Original price</dt>
                  <dd class="text-base font-medium text-white">$<%= cart.products.reduce((sum, item) => sum + item.productId.price * item.quantity, 0).toFixed(2) %></dd>
                </dl>

                <dl class="flex items-center justify-between gap-4">
                  <dt class="text-gray-400">Savings</dt>
                  <dd class="text-base font-medium text-green-500">-$0.00</dd>
                </dl>

                <dl class="flex items-center justify-between gap-4">
                  <dt class="text-gray-400">Store Pickup</dt>
                  <dd class="text-base font-medium text-white">$0</dd>
                </dl>

                <dl class="flex items-center justify-between gap-4">
                  <dt class="text-gray-400">Tax</dt>
                  <dd class="text-base font-medium text-white">$0</dd>
                </dl>
              </div>

              <dl class="flex items-center justify-between gap-4 border-t pt-2 border-gray-700">
                <dt class="text-lg font-bold text-white">Total</dt>
                <dd class="text-lg font-bold text-white">$<%= cart.products.reduce((sum, item) => sum + item.productId.price * item.quantity, 0).toFixed(2) %></dd>
              </dl>
            </div>

            <div class="flex items-start sm:items-center">
              <input id="terms-checkbox-2" type="checkbox" value="" class="h-4 w-4 rounded text-primary-600 focus:ring-2 border-gray-600 bg-gray-700 ring-offset-gray-800 focus:ring-primary-600" required />
              <label for="terms-checkbox-2" class="ms-2 text-sm font-medium text-gray-300">
                I agree with the <a href="/terms-conditions" class="underline hover:no-underline text-primary-500">Terms and Conditions</a> of use of the marketplace
              </label>
            </div>

            <div class="gap-4 sm:flex sm:items-center">
              <button type="button" class="w-full rounded-lg border px-5 py-2.5 text-sm font-medium focus:z-10 focus:outline-none focus:ring-4 border-gray-600 bg-gray-800 text-gray-400 hover:bg-gray-700 hover:text-white focus:ring-gray-700 focus:ring-offset-gray-800"><a href="/shopping">Return to Shopping</a></button>

              <button type="submit" class="bg-blue-500 mt-4 flex w-full items-center justify-center rounded-lg bg-primary-700 px-5 py-2.5 text-sm font-medium text-white focus:outline-none focus:ring-4 bg-primary-600 hover:bg-primary-700 focus:ring-primary-800 sm:mt-0">Send the order</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</section>


<script>
  document.addEventListener('DOMContentLoaded', () => {
    const provinceSelect = document.getElementById('select-province-input-3');
    const districtSelect = document.getElementById('select-district-input-3');
    const communeSelect = document.getElementById('select-commune-input-3');

    // Fetch provinces and populate the province select
    fetch('/api/provinces')
      .then((response) => response.json())
      .then((provinces) => {
        provinceSelect.innerHTML = provinces
          .map((province) => `<option value="${province.code}">${province.name}</option>`)
          .join('');
        
        // Auto-select the first option
        if (provinces.length > 0) {
          provinceSelect.selectedIndex = 0; // Select the first option by default
          // Optionally trigger the change event to load districts
          provinceSelect.dispatchEvent(new Event('change'));
        }
      });

    // Fetch districts based on selected province
    provinceSelect.addEventListener('change', () => {
      const provinceCode = provinceSelect.value;

      fetch(`/api/districts?provinceCode=${provinceCode}`)
        .then((response) => response.json())
        .then((districts) => {
          districtSelect.innerHTML = districts
            .map((district) => `<option value="${district.code}">${district.name}</option>`)
            .join('');
          // Auto-select the first district if any
          if (districts.length > 0) {
            districtSelect.selectedIndex = 0;
            // Optionally trigger the change event to load wards
            districtSelect.dispatchEvent(new Event('change'));
          }
          communeSelect.innerHTML = ''; // Clear wards when province changes
        });
    });

    // Fetch wards based on selected district
    districtSelect.addEventListener('change', () => {
      const districtCode = districtSelect.value;

      fetch(`/api/wards?districtCode=${districtCode}`)
        .then((response) => response.json())
        .then((wards) => {
          communeSelect.innerHTML = wards
            .map((ward) => `<option value="${ward.code}">${ward.name}</option>`)
            .join('');
          // Auto-select the first ward if any
          if (wards.length > 0) {
            communeSelect.selectedIndex = 0;
          }
        });
    });
  });
</script>